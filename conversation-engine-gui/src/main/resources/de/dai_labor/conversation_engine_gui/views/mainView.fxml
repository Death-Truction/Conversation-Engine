<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" fx:controller="de.dai_labor.conversation_engine_gui.controllers.MainController" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox id="mainBorderPane_VBox" spacing="5">
            <Button onAction="#handleShowView" text="Dialog Model" userData="dialogModelView.fxml" />
         	<Button onAction="#handleShowView" text="Dialog Data" userData="dialogDataView.fxml" />
            <Button onAction="#handleShowView" text="Settings" userData="settingsView.fxml" />
        </VBox>
    </left>
    <center>
        <fx:include source="dialogModelView.fxml" />
    </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </center>
      </BorderPane>
   </top>
</BorderPane>

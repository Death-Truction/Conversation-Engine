<BorderPane fx:id="mainBorderPane" fx:controller="de.dai_labor.conversation_engine_gui.view.main.MainView" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <left>
    <!-- Navigation Menu -->
        <VBox style="-fx-background-color: DARKGRAY" spacing="5">
            <Button text="Dialog Model"/>

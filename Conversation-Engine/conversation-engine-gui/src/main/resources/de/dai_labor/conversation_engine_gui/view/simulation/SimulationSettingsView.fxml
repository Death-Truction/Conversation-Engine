                              <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Conversation Inputs" VBox.vgrow="ALWAYS">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="conversationInputs" prefHeight="185.0" prefWidth="590.0" VBox.vgrow="SOMETIMES" />
                           </children>
                           <GridPane.margin>
                              <Insets left="10.0" right="10.0" />
                           </GridPane.margin>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2" />
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                           <children>
                              <Button fx:id="startButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Start">
                                 <font>
                                    <Font name="System Bold" size="22.0" />
                                 </font>
                              </Button>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                           <children>
                              <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Path to the NLP-Component">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER" maxWidth="400.0" spacing="10.0">
                                 <children>
                                    <TextField fx:id="nlpComponentPath" prefWidth="340.0" promptText="Enter path">
                                       <cursor>
                                          <Cursor fx:constant="TEXT" />
                                       </cursor>
                                    </TextField>
                                    <Button fx:id="nlpComponentPathButton" mnemonicParsing="false" prefWidth="60.0" text="Open">
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
